<%- include('partials/header') %>

<main>
    <div class="row home-container">
        <div class="col-3 side-bar">
            <h2>Hello <%= user.username %>!</h2>
            <p>What file do you want to upload today?</p>
            <form action="/home" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <select class="form-select folder-selector" name="foldername">
                        <option value="" selected disabled>Choose a Folder</option>
                        <% folders.forEach(folder => {%>
                            <option value="<%= folder.foldername %>"><%= folder.foldername %></option>
                        <%}) %>

                      </select>
                    <label for="fileName" class="mt-3">Upload File</label>
                    <br />
                    <input type="file" class="form-control-file mt-3" name="upload-file" id="fileName">
                    <br />
                    <button type="submit" class="btn btn-primary mt-3" <%= folders.length === 0 ? 'disabled' : '' %>>Upload</button>
                </div>
            </form>
            <p class="mt-3" style="color: red;"><%= file %></p>
            <div>
                <p>Or Create a new Folder</p>
                <form action="/home/new-folder" method="POST">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" name="newFolder">
                        <label for="floatingInput">New folder</label>
                      </div>
                      <button type="submit" class="btn btn-success">Create Folder</button>
                </form>
            </div>
            <div>
                <hr>
                <h4>Manage Folders</h4>
                <% if (folders.length === 0 ) { %>
                    <p>You do not have any folders. Create one.</p>
               <% } %>
                <ul>
                    <% folders.forEach(folder => {%>
                        <li><%= folder.foldername %> <a href="#" onclick="confirmDelete('<%= folder.foldername %>', <%= folder.id %>)">❌</a></li>
                    <%}) %>
                </ul>
            </div>
        </div>
        <div class="col-9">
            <h2>Select a folder to view files</h2>
            <form action="/home/files" id="folderForm" method="POST">
                <div class="form-group">
                    <select class="form-select folder-chooser" name="folders"  onchange="document.getElementById('folderForm').submit()">
                        <option selected>Choose a Folder</option>
                        <% folders.forEach(folder => {%>
                            <option value="<%= folder.foldername %>"><%= folder.foldername %></option>
                        <%}) %>
                      </select>
                </div>
                <div>
                    <% if (typeof(files) === 'string') { %>
                        <h4><%= files %></h4>
                    <% } else if (typeof(files) === 'object' && files !== null) { %>
                        <h4 class="mt-3"><%= files.foldername %></h4>
                    <% } %>
                    <% if (error) { %>
                        <p style="color: red;"><%= error %></p>
                    <% } %>
                    
                    <% if (files && files.details && files.details.length > 0) { %>
                        <ul>
                            <% files.details.forEach(file => { %>
                                <li><a href="/files/<%= user.id %>/<%= files.foldername %>/<%= file.name %>" target="_blank">
                                    <%= file.name %>
                                </a> <a href="/home/delete?file=<%= encodeURIComponent(file) %>">❌</a>
                                <br>
                                <small>Size: <%= file.size %>MB</small>
                                <small>Date Uploaded: <%= file.createdAt %></small>
                                </li>
                            <% }) %>
                    </ul>
                    <% } %>      
                </div>
            </form>
            
    </div>
</main>

<script>
    function confirmDelete(foldername, folderId) {
        const isConfirmed = confirm(`Are you sure you want to delete the folder "${foldername}"? This will delete all the files inside of it.`);
        if (isConfirmed) {
            // Redirect to delete route
            window.location.href = `/home/delete/${folderId}/${encodeURIComponent(foldername)}`;
        }
    }
</script>




<%- include('partials/footer') %>